<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/location_preview_details_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/location_preview_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location_preview_lat_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="@string/latitude"/>

        <TextView
            android:id="@+id/location_preview_long_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="@string/longitude"/>

        <TextView
            android:id="@+id/location_preview_network_count_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="@string/networks"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/location_preview_value_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location_preview_lat_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:textSize="16sp"
            android:textAlignment="center"
            tools:text="78.90.12"/>

        <TextView
            android:id="@+id/location_preview_long_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:textSize="16sp"
            android:textAlignment="center"
            tools:text="12.34.56"/>

        <TextView
            android:id="@+id/location_preview_network_count_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textSize="16sp"
            android:textAlignment="center"
            tools:text="5"/>

    </LinearLayout>

</LinearLayout>